    color: rgb(75 85 99);
  }
{%- endstyle -%}

<section class="apex-about-{{ section.id }} section-{{ section.id }}-padding">
  <div class="apex-about-container-{{ section.id }}">
    <div class="apex-about-header-{{ section.id }}">
      {%- if section.settings.title != blank -%}
        <h2 class="apex-about-title-{{ section.id }}">
          {{ section.settings.title_prefix }}
          <span class="apex-about-title-highlight-{{ section.id }}">{{ section.settings.title_highlight }}</span>
          {{ section.settings.title_suffix }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="apex-about-description-{{ section.id }}">
          {{ section.settings.description }}
        </p>
      {%- endif -%}
    </div>

    {%- if section.settings.show_stats -%}
      <div class="apex-about-stats-{{ section.id }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'stat' -%}
              <div class="apex-about-stat-card-{{ section.id }}" {{ block.shopify_attributes }}>
                <div class="apex-about-stat-icon-wrapper-{{ section.id }}">
                  <div class="apex-about-stat-icon-{{ section.id }}">
                    {{ block.settings.icon }}
                  </div>
                </div>
                <div class="apex-about-stat-number-{{ section.id }}">{{ block.settings.number }}</div>
                <div class="apex-about-stat-label-{{ section.id }}">{{ block.settings.label }}</div>
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}

    {%- if section.settings.show_mission -%}
      <div class="apex-about-mission-{{ section.id }}">
        <div class="apex-about-mission-content-{{ section.id }}">
          {%- if section.settings.mission_title != blank -%}
            <h3 class="apex-about-mission-title-{{ section.id }}">{{ section.settings.mission_title }}</h3>
          {%- endif -%}
          
          {%- if section.settings.mission_text != blank -%}
            <p class="apex-about-mission-text-{{ section.id }}">{{ section.settings.mission_text }}</p>
          {%- endif -%}
          
          {%- if section.settings.mission_badges != blank -%}
            <div class="apex-about-badges-{{ section.id }}">
              {%- assign badges = section.settings.mission_badges | split: ',' -%}
              {%- for badge in badges -%}
                <span class="apex-about-badge-{{ section.id }}">{{ badge | strip }}</span>
              {%- endfor -%}
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.show_team -%}
      <div class="apex-about-team-{{ section.id }}">
        <div class="apex-about-team-header-{{ section.id }}">
          <h3 class="apex-about-team-title-{{ section.id }}">{{ section.settings.team_title | default: 'Meet Our Team' }}</h3>
          <p class="apex-about-team-description-{{ section.id }}">{{ section.settings.team_description | default: 'The creative minds behind your success' }}</p>
        </div>

        <div class="apex-about-team-grid-{{ section.id }}">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'team_member' -%}
                <div class="apex-about-team-card-{{ section.id }}" {{ block.shopify_attributes }}>
                  {%- if block.settings.image != blank -%}
                    <div class="apex-about-team-image-wrapper-{{ section.id }}">
                      {{ block.settings.image | image_url: width: 150 | image_tag: loading: 'lazy', class: 'apex-about-team-image-' | append: section.id, alt: block.settings.name }}
                    </div>
                  {%- endif -%}
                  
                  {%- if block.settings.name != blank -%}
                    <h4 class="apex-about-team-name-{{ section.id }}">{{ block.settings.name }}</h4>
                  {%- endif -%}
                  
                  {%- if block.settings.position != blank -%}
                    <p class="apex-about-team-position-{{ section.id }}">{{ block.settings.position }}</p>
                  {%- endif -%}
                  
                  {%- if block.settings.bio != blank -%}
                    <p class="apex-about-team-bio-{{ section.id }}">{{ block.settings.bio }}</p>
                  {%- endif -%}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}

    {%- if section.settings.show_values -%}
      <div class="apex-about-values-{{ section.id }}">
        <div class="apex-about-values-header-{{ section.id }}">
          <h3 class="apex-about-values-title-{{ section.id }}">{{ section.settings.values_title | default: 'Why Choose Us?' }}</h3>
        </div>
        
        <div class="apex-about-values-grid-{{ section.id }}">
          {%- for block in section.blocks -%}
            {%- case block.type -%}
              {%- when 'value' -%}
                <div class="apex-about-value-card-{{ section.id }}" {{ block.shopify_attributes }}>
                  <h4 class="apex-about-value-title-{{ section.id }}">{{ block.settings.title }}</h4>
                  <p class="apex-about-value-description-{{ section.id }}">{{ block.settings.description }}</p>
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

