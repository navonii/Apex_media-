{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .apex-about-{{ section.id }} {
    padding: 5rem 0;
    background: linear-gradient(180deg, #ffffff 0%, #f9fafb 100%);
  }

  .apex-about-container-{{ section.id }} {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media screen and (min-width: 640px) {
    .apex-about-container-{{ section.id }} {
      padding: 0 1.5rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .apex-about-container-{{ section.id }} {
      padding: 0 2rem;
    }
  }

  .apex-about-header-{{ section.id }} {
    text-align: center;
    margin-bottom: 4rem;
  }

  .apex-about-title-{{ section.id }} {
    font-size: 2.5rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 1.5rem;
  }

  @media screen and (min-width: 1024px) {
    .apex-about-title-{{ section.id }} {
      font-size: 3rem;
    }
  }

  .apex-about-title-highlight-{{ section.id }} {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .apex-about-description-{{ section.id }} {
    font-size: 1.25rem;
    color: rgb(75 85 99);
    max-width: 48rem;
    margin: 0 auto;
  }

  .apex-about-stats-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    margin-bottom: 5rem;
  }

  @media screen and (min-width: 768px) {
    .apex-about-stats-{{ section.id }} {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .apex-about-stat-card-{{ section.id }} {
    text-align: center;
    background: white;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .apex-about-stat-card-{{ section.id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: rgba(255, 107, 53, 0.2);
  }

  .apex-about-stat-icon-wrapper-{{ section.id }} {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .apex-about-stat-icon-{{ section.id }} {
    padding: 0.75rem;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(233, 30, 99, 0.1) 100%);
    border-radius: 50%;
  }

  .apex-about-stat-icon-{{ section.id }} svg {
    width: 2rem;
    height: 2rem;
  }

  .apex-about-stat-number-{{ section.id }} {
    font-size: 1.875rem;
    font-weight: 700;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
  }

  .apex-about-stat-label-{{ section.id }} {
    color: rgb(75 85 99);
    font-weight: 500;
  }

  .apex-about-mission-{{ section.id }} {
    background: white;
    border-radius: 1.5rem;
    padding: 3rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    margin-bottom: 4rem;
    border: 1px solid rgb(229 231 235);
  }

  .apex-about-mission-content-{{ section.id }} {
    max-width: 64rem;
    margin: 0 auto;
    text-align: center;
  }

  .apex-about-mission-title-{{ section.id }} {
    font-size: 1.875rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 1.5rem;
  }

  .apex-about-mission-text-{{ section.id }} {
    font-size: 1.25rem;
    color: rgb(75 85 99);
    line-height: 1.7;
    margin-bottom: 2rem;
  }

  .apex-about-badges-{{ section.id }} {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.75rem;
  }

  .apex-about-badge-{{ section.id }} {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(233, 30, 99, 0.1) 100%);
    color: rgb(194 65 12);
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-weight: 500;
  }

  .apex-about-team-{{ section.id }} {
    margin-bottom: 5rem;
  }

  .apex-about-team-header-{{ section.id }} {
    text-align: center;
    margin-bottom: 3rem;
  }

  .apex-about-team-title-{{ section.id }} {
    font-size: 1.875rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 1rem;
  }

  .apex-about-team-description-{{ section.id }} {
    color: rgb(75 85 99);
    font-size: 1.125rem;
  }

  .apex-about-team-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 768px) {
    .apex-about-team-grid-{{ section.id }} {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .apex-about-team-card-{{ section.id }} {
    background: white;
    text-align: center;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    border: 2px solid transparent;
    transition: all 0.3s ease;
  }

  .apex-about-team-card-{{ section.id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
    border-color: rgba(255, 107, 53, 0.2);
  }

  .apex-about-team-image-wrapper-{{ section.id }} {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .apex-about-team-image-{{ section.id }} {
    width: 6rem;
    height: 6rem;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid rgba(255, 107, 53, 0.1);
    transition: border-color 0.3s ease;
  }

  .apex-about-team-card-{{ section.id }}:hover .apex-about-team-image-{{ section.id }} {
    border-color: rgba(255, 107, 53, 0.2);
  }

  .apex-about-team-name-{{ section.id }} {
    font-size: 1.25rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 0.5rem;
  }

  .apex-about-team-position-{{ section.id }} {
    color: var(--color-primary);
    font-weight: 500;
    margin-bottom: 1rem;
  }

  .apex-about-team-bio-{{ section.id }} {
    color: rgb(75 85 99);
    line-height: 1.7;
  }

  .apex-about-values-{{ section.id }} {
    margin-top: 5rem;
  }

  .apex-about-values-header-{{ section.id }} {
    text-align: center;
    margin-bottom: 3rem;
  }

  .apex-about-values-title-{{ section.id }} {
    font-size: 1.875rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 1rem;
  }

  .apex-about-values-grid-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media screen and (min-width: 768px) {
    .apex-about-values-grid-{{ section.id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (min-width: 1024px) {
    .apex-about-values-grid-{{ section.id }} {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .apex-about-value-card-{{ section.id }} {
    text-align: center;
    padding: 1.5rem;
    border-radius: 0.75rem;
    background: linear-gradient(180deg, #ffffff 0%, #f9fafb 100%);
    transition: all 0.3s ease;
  }

  .apex-about-value-card-{{ section.id }}:hover {
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
  }

