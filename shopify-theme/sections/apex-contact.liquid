{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .apex-contact-{{ section.id }} {
    padding: 5rem 0;
    background: linear-gradient(180deg, #f9fafb 0%, #ffffff 100%);
  }

  .apex-contact-container-{{ section.id }} {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media screen and (min-width: 640px) {
    .apex-contact-container-{{ section.id }} {
      padding: 0 1.5rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .apex-contact-container-{{ section.id }} {
      padding: 0 2rem;
    }
  }

  .apex-contact-header-{{ section.id }} {
    text-align: center;
    margin-bottom: 4rem;
  }

  .apex-contact-title-{{ section.id }} {
    font-size: 2.5rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 1.5rem;
  }

  @media screen and (min-width: 1024px) {
    .apex-contact-title-{{ section.id }} {
      font-size: 3rem;
    }
  }

  .apex-contact-title-highlight-{{ section.id }} {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .apex-contact-description-{{ section.id }} {
    font-size: 1.25rem;
    color: rgb(75 85 99);
    max-width: 48rem;
    margin: 0 auto;
  }

  .apex-contact-content-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media screen and (min-width: 1024px) {
    .apex-contact-content-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
    }
  }

  .apex-contact-form-card-{{ section.id }} {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .apex-contact-form-card-{{ section.id }}:hover {
    border-color: rgba(255, 107, 53, 0.2);
  }

  .apex-contact-form-header-{{ section.id }} {
    margin-bottom: 1.5rem;
  }

  .apex-contact-form-title-{{ section.id }} {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 0.5rem;
  }

  .apex-contact-form-subtitle-{{ section.id }} {
    color: rgb(107 114 128);
  }

  .apex-contact-form-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .apex-contact-form-row-{{ section.id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media screen and (min-width: 768px) {
    .apex-contact-form-row-{{ section.id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .apex-contact-form-group-{{ section.id }} {
    display: flex;
    flex-direction: column;
  }

  .apex-contact-form-label-{{ section.id }} {
    display: block;
    font-weight: 500;
    color: rgb(55 65 81);
    margin-bottom: 0.5rem;
  }

  .apex-contact-form-input-{{ section.id }} {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid rgb(229 231 235);
    border-radius: 0.5rem;
    font-family: inherit;
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .apex-contact-form-input-{{ section.id }}:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(255, 107, 53, 0.1);
  }

  .apex-contact-form-textarea-{{ section.id }} {
    min-height: 120px;
    resize: vertical;
  }

  .apex-contact-form-button-{{ section.id }} {
    width: 100%;
    background: var(--gradient-primary);
    color: white;
    padding: 0.75rem 1.5rem;
    font-size: 1.125rem;
    border-radius: 0.75rem;
    border: none;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .apex-contact-form-button-{{ section.id }}:hover {
    background: var(--gradient-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(255, 107, 53, 0.3);
  }

  .apex-contact-info-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .apex-contact-info-card-{{ section.id }} {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    border: 2px solid transparent;
    transition: border-color 0.3s ease;
  }

  .apex-contact-info-card-{{ section.id }}:hover {
    border-color: rgba(255, 107, 53, 0.2);
  }

  .apex-contact-info-header-{{ section.id }} {
    margin-bottom: 1.5rem;
  }

  .apex-contact-info-title-{{ section.id }} {
    font-size: 1.5rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 0.5rem;
  }

  .apex-contact-info-subtitle-{{ section.id }} {
    color: rgb(107 114 128);
  }

  .apex-contact-info-list-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .apex-contact-info-item-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .apex-contact-info-icon-{{ section.id }} {
    padding: 0.75rem;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(233, 30, 99, 0.1) 100%);
    border-radius: 0.75rem;
  }

  .apex-contact-info-icon-{{ section.id }} svg {
    width: 1.5rem;
    height: 1.5rem;
    color: var(--color-primary);
  }

  .apex-contact-info-text-{{ section.id }} {
    display: flex;
    flex-direction: column;
  }

  .apex-contact-info-label-{{ section.id }} {
    font-weight: 500;
    color: rgb(17 24 39);
  }

  .apex-contact-info-value-{{ section.id }} {
    color: rgb(75 85 99);
  }

  .apex-contact-quick-actions-{{ section.id }} {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .apex-contact-quick-action-{{ section.id }} {
    background: white;
    text-align: center;
    padding: 1.5rem;
    border-radius: 1rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
  }

  .apex-contact-quick-action-{{ section.id }}:hover {
    box-shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  .apex-contact-quick-icon-wrapper-{{ section.id }} {
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .apex-contact-quick-icon-{{ section.id }} {
    padding: 1rem;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.1) 0%, rgba(233, 30, 99, 0.1) 100%);
    border-radius: 50%;
    transition: background 0.3s ease;
  }

  .apex-contact-quick-action-{{ section.id }}:hover .apex-contact-quick-icon-{{ section.id }} {
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.2) 0%, rgba(233, 30, 99, 0.2) 100%);
  }

  .apex-contact-quick-icon-{{ section.id }} svg {
    width: 2rem;
    height: 2rem;
    color: var(--color-primary);
  }

  .apex-contact-quick-title-{{ section.id }} {
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 0.5rem;
  }

  .apex-contact-quick-description-{{ section.id }} {
    font-size: 0.875rem;
    color: rgb(75 85 99);
  }

  .apex-contact-hours-{{ section.id }} {
    background: white;
    border-radius: 1rem;
    padding: 1.5rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .apex-contact-hours-title-{{ section.id }} {
    font-size: 1.25rem;
    font-weight: 700;
    color: rgb(17 24 39);
    margin-bottom: 1rem;
  }

  .apex-contact-hours-list-{{ section.id }} {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .apex-contact-hours-item-{{ section.id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .apex-contact-hours-day-{{ section.id }} {
    color: rgb(75 85 99);
  }

  .apex-contact-hours-time-{{ section.id }} {
    font-weight: 500;
    color: rgb(17 24 39);
  }
{%- endstyle -%}

<section class="apex-contact-{{ section.id }} section-{{ section.id }}-padding">
  <div class="apex-contact-container-{{ section.id }}">
    <div class="apex-contact-header-{{ section.id }}">
      {%- if section.settings.title != blank -%}
        <h2 class="apex-contact-title-{{ section.id }}">
          {{ section.settings.title_prefix }}
          <span class="apex-contact-title-highlight-{{ section.id }}">{{ section.settings.title_highlight }}</span>
          {{ section.settings.title_suffix }}
        </h2>
      {%- endif -%}
      
      {%- if section.settings.description != blank -%}
        <p class="apex-contact-description-{{ section.id }}">
          {{ section.settings.description }}
        </p>
      {%- endif -%}
    </div>

    <div class="apex-contact-content-{{ section.id }}">
      <!-- Contact Form -->
      <div class="apex-contact-form-card-{{ section.id }}">
        <div class="apex-contact-form-header-{{ section.id }}">
          <h3 class="apex-contact-form-title-{{ section.id }}">{{ section.settings.form_title | default: 'Send us a message' }}</h3>
          <p class="apex-contact-form-subtitle-{{ section.id }}">{{ section.settings.form_subtitle | default: 'Fill out the form and we\'ll get back to you within 24 hours' }}</p>
        </div>

        <form class="apex-contact-form-{{ section.id }}" action="{{ section.settings.form_action | default: '/contact#contact_form' }}" method="post" accept-charset="UTF-8">
          <input type="hidden" name="form_type" value="contact">
          <input type="hidden" name="utf8" value="âœ“">
          
          <div class="apex-contact-form-row-{{ section.id }}">
            <div class="apex-contact-form-group-{{ section.id }}">
              <label for="ContactFormName-{{ section.id }}" class="apex-contact-form-label-{{ section.id }}">Name *</label>
              <input 
                type="text" 
                id="ContactFormName-{{ section.id }}" 
                name="contact[name]" 
                required 
                class="apex-contact-form-input-{{ section.id }}"
                placeholder="Your full name"
              >
            </div>
            <div class="apex-contact-form-group-{{ section.id }}">
              <label for="ContactFormEmail-{{ section.id }}" class="apex-contact-form-label-{{ section.id }}">Email *</label>
              <input 
                type="email" 
                id="ContactFormEmail-{{ section.id }}" 
                name="contact[email]" 
                required 
                class="apex-contact-form-input-{{ section.id }}"
                placeholder="your@email.com"
              >
            </div>
          </div>

          <div class="apex-contact-form-group-{{ section.id }}">
            <label for="ContactFormCompany-{{ section.id }}" class="apex-contact-form-label-{{ section.id }}">Company</label>
            <input 
              type="text" 
              id="ContactFormCompany-{{ section.id }}" 
              name="contact[company]" 
              class="apex-contact-form-input-{{ section.id }}"
              placeholder="Your company name"
            >
          </div>

          <div class="apex-contact-form-row-{{ section.id }}">
            <div class="apex-contact-form-group-{{ section.id }}">
              <label for="ContactFormService-{{ section.id }}" class="apex-contact-form-label-{{ section.id }}">Service Needed</label>
              <select id="ContactFormService-{{ section.id }}" name="contact[service]" class="apex-contact-form-input-{{ section.id }}">
                <option value="">Select a service</option>
                <option value="custom-design">Custom Web Design</option>
                <option value="ecommerce">E-commerce Solution</option>
                <option value="templates">Premium Templates</option>
                <option value="maintenance">Website Maintenance</option>
                <option value="consultation">Consultation</option>
              </select>
            </div>
            <div class="apex-contact-form-group-{{ section.id }}">
              <label for="ContactFormBudget-{{ section.id }}" class="apex-contact-form-label-{{ section.id }}">Budget Range</label>
              <select id="ContactFormBudget-{{ section.id }}" name="contact[budget]" class="apex-contact-form-input-{{ section.id }}">
                <option value="">Select budget</option>
                <option value="under-5k">Under $5,000</option>
                <option value="5k-10k">$5,000 - $10,000</option>
                <option value="10k-25k">$10,000 - $25,000</option>
                <option value="25k-50k">$25,000 - $50,000</option>
                <option value="over-50k">Over $50,000</option>
              </select>
            </div>
          </div>

          <div class="apex-contact-form-group-{{ section.id }}">
            <label for="ContactFormMessage-{{ section.id }}" class="apex-contact-form-label-{{ section.id }}">Message *</label>
            <textarea 
              id="ContactFormMessage-{{ section.id }}" 
              name="contact[body]" 
              required 
              class="apex-contact-form-input-{{ section.id }} apex-contact-form-textarea-{{ section.id }}"
              placeholder="Tell us about your project requirements..."
            ></textarea>
          </div>

          <button type="submit" class="apex-contact-form-button-{{ section.id }}">
            {{ section.settings.form_button_text | default: 'Send Message' }}
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
              <path d="M22 2L11 13M22 2L15 22L11 13M22 2L2 9L11 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </button>
        </form>
      </div>

      <!-- Contact Information -->
      <div class="apex-contact-info-{{ section.id }}">
        <div class="apex-contact-info-card-{{ section.id }}">
          <div class="apex-contact-info-header-{{ section.id }}">
            <h3 class="apex-contact-info-title-{{ section.id }}">Contact Information</h3>
            <p class="apex-contact-info-subtitle-{{ section.id }}">Reach out to us directly</p>
          </div>

          <div class="apex-contact-info-list-{{ section.id }}">
            {%- if section.settings.phone != blank -%}
              <div class="apex-contact-info-item-{{ section.id }}">
                <div class="apex-contact-info-icon-{{ section.id }}">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div class="apex-contact-info-text-{{ section.id }}">
                  <div class="apex-contact-info-label-{{ section.id }}">Phone</div>
                  <div class="apex-contact-info-value-{{ section.id }}">{{ section.settings.phone }}</div>
                </div>
              </div>
            {%- endif -%}

            {%- if section.settings.email != blank -%}
              <div class="apex-contact-info-item-{{ section.id }}">
                <div class="apex-contact-info-icon-{{ section.id }}">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="apex-contact-info-text-{{ section.id }}">
                  <div class="apex-contact-info-label-{{ section.id }}">Email</div>
                  <div class="apex-contact-info-value-{{ section.id }}">{{ section.settings.email }}</div>
                </div>
              </div>
            {%- endif -%}

            {%- if section.settings.address != blank -%}
              <div class="apex-contact-info-item-{{ section.id }}">
                <div class="apex-contact-info-icon-{{ section.id }}">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                </div>
                <div class="apex-contact-info-text-{{ section.id }}">
                  <div class="apex-contact-info-label-{{ section.id }}">Address</div>
                  <div class="apex-contact-info-value-{{ section.id }}">{{ section.settings.address }}</div>
                </div>
              </div>
            {%- endif -%}
          </div>
        </div>

        <!-- Quick Actions -->
        <div class="apex-contact-quick-actions-{{ section.id }}">
          {%- if section.settings.phone != blank -%}
            <a href="tel:{{ section.settings.phone }}" class="apex-contact-quick-action-{{ section.id }}">
              <div class="apex-contact-quick-icon-wrapper-{{ section.id }}">
                <div class="apex-contact-quick-icon-{{ section.id }}">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
              </div>
              <h4 class="apex-contact-quick-title-{{ section.id }}">Call Now</h4>
              <p class="apex-contact-quick-description-{{ section.id }}">Quick response</p>
            </a>
          {%- endif -%}
          
          {%- if section.settings.email != blank -%}
            <a href="mailto:{{ section.settings.email }}" class="apex-contact-quick-action-{{ section.id }}">
              <div class="apex-contact-quick-icon-wrapper-{{ section.id }}">
                <div class="apex-contact-quick-icon-{{ section.id }}">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
              </div>
              <h4 class="apex-contact-quick-title-{{ section.id }}">Email Us</h4>
              <p class="apex-contact-quick-description-{{ section.id }}">24hr response</p>
            </a>
          {%- endif -%}
        </div>

        <!-- Business Hours -->
        {%- if section.settings.show_hours -%}
          <div class="apex-contact-hours-{{ section.id }}">
            <h4 class="apex-contact-hours-title-{{ section.id }}">Business Hours</h4>
            <div class="apex-contact-hours-list-{{ section.id }}">
              <div class="apex-contact-hours-item-{{ section.id }}">
                <span class="apex-contact-hours-day-{{ section.id }}">Monday - Friday</span>
                <span class="apex-contact-hours-time-{{ section.id }}">9:00 AM - 6:00 PM</span>
              </div>
              <div class="apex-contact-hours-item-{{ section.id }}">
                <span class="apex-contact-hours-day-{{ section.id }}">Saturday</span>
                <span class="apex-contact-hours-time-{{ section.id }}">10:00 AM - 4:00 PM</span>
              </div>
              <div class="apex-contact-hours-item-{{ section.id }}">
                <span class="apex-contact-hours-day-{{ section.id }}">Sunday</span>
                <span class="apex-contact-hours-time-{{ section.id }}">Closed</span>
              </div>
            </div>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</section>

