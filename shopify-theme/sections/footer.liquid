  "settings": [
    {
      "type": "header",
      "content": "Footer settings"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "brand_information",
      "name": "Brand information", 
      "settings": [
        {
          "type": "checkbox",
          "id": "show_social",
          "default": true,
          "label": "Show social media links"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter signup",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Newsletter",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "subtext",
          "default": "Subscribe to get special offers, free giveaways, and more.",
          "label": "Subtext"
        }
      ]
    }
  ],
  "default": {
    "blocks": [
      {
        "type": "link_list",
        "settings": {
          "heading": "Quick links",
          "menu": "footer"
        }
      },
      {
        "type": "brand_information",
        "settings": {
          "show_social": true
        }
      }
    ]
  }
}
{% endschema %}