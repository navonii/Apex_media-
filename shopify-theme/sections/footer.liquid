{%- style -%}
  .footer-{{ section.id }} {
    background: rgb(17, 24, 39);
    color: rgb(243, 244, 246);
    padding: 3rem 0 1rem;
  }

  .footer-container-{{ section.id }} {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  @media screen and (min-width: 640px) {
    .footer-container-{{ section.id }} {
      padding: 0 1.5rem;
    }
  }

  @media screen and (min-width: 1024px) {
    .footer-container-{{ section.id }} {
      padding: 0 2rem;
    }
  }

  .footer-content-{{ section.id }} {
    display: grid;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  @media screen and (min-width: 768px) {
    .footer-content-{{ section.id }} {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer-section-{{ section.id }} {
    display: flex;
    flex-direction: column;
  }

  .footer-section-title-{{ section.id }} {
    font-size: 1.125rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: white;
  }

  .footer-links-{{ section.id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-link-{{ section.id }} {
    margin-bottom: 0.5rem;
  }

  .footer-link-{{ section.id }} a {
    color: rgb(156, 163, 175);
    transition: color 0.3s ease;
    text-decoration: none;
  }

  .footer-link-{{ section.id }} a:hover {
    color: var(--color-primary);
  }

  .footer-bottom-{{ section.id }} {
    border-top: 1px solid rgb(55, 65, 81);
    padding-top: 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-copyright-{{ section.id }} {
    color: rgb(156, 163, 175);
  }

  .footer-social-{{ section.id }} {
    display: flex;
    gap: 1rem;
  }

  .footer-social-link-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgb(55, 65, 81);
    border-radius: 0.5rem;
    color: rgb(156, 163, 175);
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .footer-social-link-{{ section.id }}:hover {
    background: var(--color-primary);
    color: white;
  }

  .footer-newsletter-{{ section.id }} {
    margin-bottom: 1rem;
  }

  .footer-newsletter-form-{{ section.id }} {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .footer-newsletter-input-{{ section.id }} {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid rgb(75, 85, 99);
    border-radius: 0.5rem;
    background: rgb(31, 41, 55);
    color: white;
    font-family: inherit;
  }

  .footer-newsletter-input-{{ section.id }}::placeholder {
    color: rgb(156, 163, 175);
  }

  .footer-newsletter-input-{{ section.id }}:focus {
    outline: none;
    border-color: var(--color-primary);
  }

  .footer-newsletter-button-{{ section.id }} {
    background: var(--gradient-primary);
    color: white;
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .footer-newsletter-button-{{ section.id }}:hover {
    background: var(--gradient-primary-hover);
  }

  @media screen and (max-width: 767px) {
    .footer-bottom-{{ section.id }} {
      flex-direction: column;
      text-align: center;
    }
  }
{%- endstyle -%}

<footer class="footer-{{ section.id }}">
  <div class="footer-container-{{ section.id }}">
    <div class="footer-content-{{ section.id }}">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'link_list' -%}
            <div class="footer-section-{{ section.id }}" {{ block.shopify_attributes }}>
              {%- if block.settings.heading != blank -%}
                <h3 class="footer-section-title-{{ section.id }}">{{ block.settings.heading }}</h3>
              {%- endif -%}
              {%- if linklists[block.settings.menu].links.size > 0 -%}
                <ul class="footer-links-{{ section.id }}">
                  {%- for link in linklists[block.settings.menu].links -%}
                    <li class="footer-link-{{ section.id }}">
                      <a href="{{ link.url }}">{{ link.title }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
          {%- when 'brand_information' -%}
            <div class="footer-section-{{ section.id }}" {{ block.shopify_attributes }}>
              <h3 class="footer-section-title-{{ section.id }}">{{ shop.name }}</h3>
              {%- if shop.description != blank -%}
                <p style="color: rgb(156, 163, 175); margin-bottom: 1rem;">{{ shop.description }}</p>
              {%- endif -%}
              
              {%- if block.settings.show_social and settings.social_twitter_link != blank or settings.social_facebook_link != blank or settings.social_instagram_link != blank -%}
                <div class="footer-social-{{ section.id }}">
                  {%- if settings.social_facebook_link != blank -%}
                    <a href="{{ settings.social_facebook_link }}" class="footer-social-link-{{ section.id }}" target="_blank">
                      <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                      </svg>
                    </a>
                  {%- endif -%}
                  {%- if settings.social_twitter_link != blank -%}
                    <a href="{{ settings.social_twitter_link }}" class="footer-social-link-{{ section.id }}" target="_blank">
