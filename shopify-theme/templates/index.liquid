  <!-- Simple Contact Section -->
  <section id="contact" class="apex-contact">
    <div class="apex-contact-container">
      <div class="apex-contact-header">
        <h2 class="apex-contact-title">
          Get In <span class="apex-contact-title-highlight">Touch</span>
        </h2>
        
        <p class="apex-contact-description">
          Ready to transform your online presence? Let's discuss your project and create something amazing together.
        </p>
      </div>

      <div class="apex-contact-content">
        <!-- Contact Form -->
        <div class="apex-contact-form-card">
          <div class="apex-contact-form-header">
            <h3 class="apex-contact-form-title">Send us a message</h3>
            <p class="apex-contact-form-subtitle">Fill out the form and we'll get back to you within 24 hours</p>
          </div>

          <form class="apex-contact-form" action="/contact#contact_form" method="post" accept-charset="UTF-8">
            <input type="hidden" name="form_type" value="contact">
            <input type="hidden" name="utf8" value="✓">
            
            <div class="apex-contact-form-row">
              <div class="apex-contact-form-group">
                <label for="ContactFormName" class="apex-contact-form-label">Name *</label>
                <input 
                  type="text" 
                  id="ContactFormName" 
                  name="contact[name]" 
                  required 
                  class="apex-contact-form-input"
                  placeholder="Your full name"
                >
              </div>
              <div class="apex-contact-form-group">
                <label for="ContactFormEmail" class="apex-contact-form-label">Email *</label>
                <input 
                  type="email" 
                  id="ContactFormEmail" 
                  name="contact[email]" 
                  required 
                  class="apex-contact-form-input"
                  placeholder="your@email.com"
                >
              </div>
            </div>

            <div class="apex-contact-form-group">
              <label for="ContactFormMessage" class="apex-contact-form-label">Message *</label>
              <textarea 
                id="ContactFormMessage" 
                name="contact[body]" 
                required 
                class="apex-contact-form-input apex-contact-form-textarea"
                placeholder="Tell us about your project requirements..."
              ></textarea>
            </div>

            <button type="submit" class="apex-contact-form-button">
              Send Message
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none">
                <path d="M22 2L11 13M22 2L15 22L11 13M22 2L2 9L11 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>
          </form>
        </div>

        <!-- Contact Information -->
        <div class="apex-contact-info">
          <div class="apex-contact-info-card">
            <div class="apex-contact-info-header">
              <h3 class="apex-contact-info-title">Contact Information</h3>
              <p class="apex-contact-info-subtitle">Reach out to us directly</p>
            </div>

            <div class="apex-contact-info-list">
              <div class="apex-contact-info-item">
                <div class="apex-contact-info-icon">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                  </svg>
                </div>
                <div class="apex-contact-info-text">
                  <div class="apex-contact-info-label">Phone</div>
                  <div class="apex-contact-info-value">+1 (555) 123-4567</div>
                </div>
              </div>

              <div class="apex-contact-info-item">
                <div class="apex-contact-info-icon">
                  <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                  </svg>
                </div>
                <div class="apex-contact-info-text">
                  <div class="apex-contact-info-label">Email</div>
                  <div class="apex-contact-info-value">contact@apexmediadesign.com</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

